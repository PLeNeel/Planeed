<%= image_tag "dispo.png", class:"img_bg"%>
<div class="container">
  <h3> Mes Missions</h3>
  <div class="booking">
  <% @bookings.each do |booking| %>
    <% if current_user.admin == false %>
      <%= link_to service_path(booking.mission.service), class: "blog-booking" do %>
        <div class="meta">
            <div class="photo" style="background-image: url(https://storage.googleapis.com/chydlx/codepen/blog-cards/image-1.jpg)"></div>
          </div>
          <div class="booking_card">
            <h1>Le <%= booking.mission.date %></h1>
            <h2> Service : <%= booking.mission.service.name %></h2>
          </div>
          <div>
            <%= link_to booking_path(booking),
              method: :delete,
              data: { confirm: "Êtes-vous sûr ?" } do %>
              <i class="fas fa-trash" id="delete"></i>
            <% end %>
          </div>
      <% end %>
    <% else %>
      <%= link_to edit_booking_path(booking), class: "blog-booking" do %>
        <div class="meta">
          <div class="photo" style="background-image: url(https://storage.googleapis.com/chydlx/codepen/blog-cards/image-1.jpg)"></div>
        </div>
        <div class="booking_card">
          <h1>Le <%= booking.mission.date %></h1>
          <h2> Service : <%= booking.mission.service.name %></h2>
          <%= link_to booking_path(booking),
            method: :delete,
            data: { confirm: "Êtes-vous sûr ?" } do %>
            <i class="fas fa-trash" id="delete"></i>
          <% end %>
      <% end %>
    <% end %>
  <% end %>
  </div>

</div>
