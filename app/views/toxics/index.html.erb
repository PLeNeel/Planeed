<div class="container">
  <h1>Service <%= @service.name %></h1>
  <% @toxics.each do |toxic| %>
    <div class="toxic-card">
      <div class="toxic-name" data-toxicName="<%= toxic.name %>">
        <%= toxic.name %>
        <div class="toxic-tq">
          <i>stock max: <%= toxic.total_quantity %></i>
        </div>
      </div>
      <div class="toxic-ct">
        <%= toxic.current_quantity %>
      </div>
      <div class="withdraw-btns">
        <div id="minus-btn" data-id="<%= toxic.id %>" data-quantity="<%= toxic.current_quantity%>" data-withdrawId="<%= current_user.last_withdraw_for(toxic)&.id %>" data-operator="minus">
            <%= image_tag "minus_sign.png", width: "50px"%>
        </div>
        <div id="plus-btn" data-id="<%= toxic.id %>" data-quantity="<%= toxic.current_quantity%>" data-withdrawId="<%= current_user.last_withdraw_for(toxic)&.id %>" data-operator="plus">
            <%= image_tag "plus_sign.png", width: "50px"%>
        </div>
      </div>
    </div>
  <% end %>
</div>
