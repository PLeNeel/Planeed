<div class="container">
  <div class="description title my-3">
    <h1>Service <%= @service.name.capitalize %></h1>
  </div>
  <%= simple_form_for @service do |f| %>
    <%= f.input :phone_number, label: "Téléphone" %>
    <%= f.input :predominant_disease, label: "Pathologies prévalentes" %>
    <%= f.input :typical_workday, label: "Journée type" %>
    <%= f.input :predominant_drugs, label: "Médicaments prévalents" %>
    <%= f.submit "Actualiser", class: "btn btn-primary" %>
  <% end %>
</div>
