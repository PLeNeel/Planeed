<div class="container">
  <h2>Se connecter Ã  Planneed </h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label: "Email",
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Mot de passe",
                  required: false,
                  input_html: { autocomplete: "mot de passe" } %>
      <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <button class="btn-success"><%= f.button :submit, "Se connecter" %></button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
